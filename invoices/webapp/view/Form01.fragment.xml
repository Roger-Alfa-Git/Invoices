<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <Panel id="panelFr" headerText="{i18n>panelFrTitle}" class="sapUiResponsiveMargin" width="50%" expandable="{device>/system/phone}" expanded="{= !${device>/system/phone} }">
        <f:SimpleForm id="form" editable="true">
            <f:content>
                <Label id="label" text="{i18n>labelPerson}" labelFor="persName"></Label>
                <Input id="persName"></Input>
            </f:content>
        </f:SimpleForm>
    </Panel>
</core:FragmentDefinition>